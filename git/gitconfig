[user]
	name = Vladislav Gapurov
	email = gapurov@gmail.com
  username = gapurov
[core]
  editor = code --wait
  autocrlf = input
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
[init]
	defaultBranch = main
[web]
  browser = google-chrome
[pull]
	rebase = false
[push]
  default = current
[diff]
	tool = opendiff
[difftool "opendiff"]
	cmd = opendiff "$LOCAL" "$REMOTE"
[merge]
	tool = opendiff
[mergetool "opendiff"]
	cmd = opendiff "$LOCAL" "$REMOTE" -ancestor "$BASE" -merge "$MERGED"
	trustExitCode = false
[color]
  ui = auto
[credential]
	helper = osxkeychain
[log]
  date = relative
[format]
  pretty = format:%h %Cblue%ad%Creset %ae %Cgreen%s%Creset
[alias]
  #############
  b = branch
  ba = branch -a
  bd = branch -d
  bdd = branch -D
  #############
  cld = clone --depth 1
  #############
  d = diff
  dp = diff --patience
  dc = diff --cached
  dk = diff --check
  dck = diff --cached --check
  #############
  f = fetch
  fo = fetch origin
  fu = fetch upstream
  #############
  ggrh = git reset --hard origin/$(git bc)
  #############
  assume = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
